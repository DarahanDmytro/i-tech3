<head>
  <title>Лабораторна №3 Дараган</title>
  <meta lang="ua">
  <link rel="stylesheet" href="styles/style.css">
  <script type="text/javascript"
  src="http://ajax.microsoft.com/ajax/jquery/jquery-1.4.2.min.js"></script>
</head>
<body>
   <script>
      var img_num = 10;
      var ranger;


      function change_image(){
	img_num = (img_num++) % 10 +1;
        $("#slider").attr("src","images/" + img_num + ".jpg");
      }

      function change_interval(){
         var delay = ranger.val();
	 clearInterval(slider);
         slider = setInterval(change_image, delay); //global
      }
      
      $(function(){
         ranger = $("#ranger");
         var delay = ranger.val()
         slider = setInterval(change_image, delay); //global
       });
   </script>
   <header>
     <h1>Лабораторна №3 Дараган КІУКІ-19-5</h1>
   </header>
   <main>
     <img id="slider" src="images/10.jpg">
     <span>1ms <input id="ranger" type="range" min="1" max="10000" step="500" val="500" oninput="change_interval()"> 10000ms</span>
   </main>
   <footer>
     lorem ipsum
   </footer>
</body>
